---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
}

const { src, alt, width, height, class: className, loading = 'lazy' } = Astro.props;
---

<picture>
  <source srcset={src} type="image/webp" />
  <img 
    src={src} 
    alt={alt} 
    width={width} 
    height={height}
    class={className}
    loading={loading}
    decoding="async"
  />
</picture>